---
import Layout from '../layouts/Layout.astro';
import { WORKOUTS, SCHEDULE } from '../data/workouts';
import { getRandomPlaylist, PLAYLIST_COUNT } from '../data/playlists';

export const prerender = false;

// Use Eastern timezone for all date calculations
const easternDate = new Date().toLocaleString('en-US', { timeZone: 'America/New_York' });
const nowEastern = new Date(easternDate);

const today = nowEastern.toLocaleDateString('en-US', {
  weekday: 'long',
  month: 'long',
  day: 'numeric'
});

const dayOfWeek = nowEastern.toLocaleDateString('en-US', { weekday: 'long' }).toLowerCase();

// Use the SCHEDULE from workouts.ts (new 3-day plan)
const workoutId = SCHEDULE[dayOfWeek] || 'rest_day';
const workout = WORKOUTS[workoutId];

const isRestDay = workoutId === 'rest_day';
const isSunday = dayOfWeek === 'sunday';

// Get a random playlist (different each page load)
const playlist = getRandomPlaylist();
---

<Layout title="Daily Spark" activeNav="spark">
  <div class="max-w-lg mx-auto space-y-6">

    <!-- Back to Calendar -->
    <a href="/" class="inline-flex items-center gap-2 text-sm text-gray-500 hover:text-brand-orange transition-colors">
      ‚Üê Back to Calendar
    </a>

    <!-- Streak Hero -->
    <div class="text-center py-8">
      <div id="streak-hero" class="inline-flex flex-col items-center">
        <div class="text-6xl mb-2">üî•</div>
        <div class="text-5xl font-black text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-red-500" id="streak-number">
          Day 0
        </div>
        <div class="text-gray-500 mt-2 font-medium">Don't break the chain</div>
      </div>
    </div>

    <!-- Date & Workout -->
    <div class="card text-center">
      <div class="text-sm text-gray-500 uppercase tracking-wide">{today}</div>
      {isSunday ? (
        <h1 class="text-2xl font-bold mt-2">Meal Prep Day</h1>
        <div class="mt-1 text-sm text-gray-500">~1 hour</div>
      ) : (
        <>
          <h1 class="text-2xl font-bold mt-2">{workout?.name || 'Rest Day'}</h1>
          {!isRestDay && workout && (
            <div class="mt-1 text-sm text-gray-500">{workout.duration}</div>
          )}
        </>
      )}
    </div>

    <!-- Scripture -->
    <div class="card bg-gradient-to-br from-amber-50 to-orange-50 border border-amber-200">
      <div class="flex items-start gap-3">
        <span class="text-2xl">üìñ</span>
        <div>
          <p id="verse-text" class="text-gray-700 italic leading-relaxed">
            Loading today's verse...
          </p>
          <p id="verse-reference" class="text-sm text-amber-700 font-semibold mt-3">
            ‚Äî
          </p>
        </div>
      </div>
    </div>

    <!-- Spotify Button - Random Playlist Every Day -->
    <div class="space-y-2">
        <a
          href={playlist.spotifyUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-between w-full py-4 px-5 bg-[#1DB954] hover:bg-[#1ed760] text-white rounded-2xl font-semibold transition-colors shadow-lg"
        >
          <div class="flex items-center gap-3">
            <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
            </svg>
            <div class="text-left">
              <div class="text-sm opacity-80">Today's Playlist</div>
              <div class="font-bold">{playlist.name}</div>
            </div>
          </div>
          <div class="text-right text-sm opacity-80">
            <div>{playlist.genre}</div>
            <div class="text-xs">{playlist.vibe}</div>
          </div>
        </a>
        <p class="text-center text-xs text-gray-400">
          1 of {PLAYLIST_COUNT} playlists ‚Ä¢ Refresh for different music
        </p>
      </div>

    <!-- Start Workout CTA -->
    {isSunday ? (
      <a
        href="/meal-prep"
        class="block w-full py-5 bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white text-center rounded-2xl font-bold text-lg shadow-lg transition-all hover:shadow-xl active:scale-[0.98]"
      >
        Start Meal Prep ‚Üí
      </a>
    ) : !isRestDay ? (
      <a
        href={`/workout?id=${workoutId}`}
        class="block w-full py-5 bg-gradient-to-r from-brand-orange to-orange-500 hover:from-orange-600 hover:to-orange-500 text-white text-center rounded-2xl font-bold text-lg shadow-lg transition-all hover:shadow-xl active:scale-[0.98]"
      >
        Start Workout ‚Üí
      </a>
    ) : (
      <div class="card text-center bg-gray-50">
        <div class="text-4xl mb-3">üò¥</div>
        <h3 class="font-semibold text-lg">Rest Day</h3>
        <p class="text-gray-500 mt-1">Recovery is part of the process. Take it easy today.</p>
        <a href="/" class="text-brand-orange hover:underline text-sm mt-4 inline-block">
          View Calendar ‚Üí
        </a>
      </div>
    )}

    <!-- Weekly Challenge -->
    <div class="card">
      <div class="flex items-center justify-between mb-3">
        <h3 class="font-semibold">Weekly Challenge</h3>
        <span id="challenge-status" class="text-xs px-2 py-1 rounded-full bg-gray-100 text-gray-600">
          Loading...
        </span>
      </div>
      <p id="challenge-title" class="text-gray-700 mb-3">-</p>
      <div class="flex items-center gap-3">
        <div class="flex-1 h-3 bg-gray-200 rounded-full overflow-hidden">
          <div id="challenge-progress" class="h-full bg-gradient-to-r from-green-400 to-green-500 rounded-full transition-all duration-500" style="width: 0%"></div>
        </div>
        <span id="challenge-count" class="text-sm font-medium text-gray-600">0/0</span>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="grid grid-cols-3 gap-3">
      <a href="/nutrition" class="card text-center py-4 hover:shadow-md transition-shadow">
        <div class="text-2xl mb-1">üçó</div>
        <div class="text-xs text-gray-600">Nutrition</div>
      </a>
      <a href="/metrics" class="card text-center py-4 hover:shadow-md transition-shadow">
        <div class="text-2xl mb-1">üìè</div>
        <div class="text-xs text-gray-600">Metrics</div>
      </a>
      <a href="/meal-prep" class="card text-center py-4 hover:shadow-md transition-shadow">
        <div class="text-2xl mb-1">ü•ó</div>
        <div class="text-xs text-gray-600">Meal Prep</div>
      </a>
    </div>

  </div>
</Layout>

<script define:vars={{ workoutType: workoutId }}>
  // Load streak
  async function loadStreak() {
    try {
      const res = await fetch('/api/streak');
      const data = await res.json();
      const streakEl = document.getElementById('streak-number');
      if (streakEl) {
        streakEl.textContent = `Day ${data.current_streak || 0}`;
      }
    } catch (err) {
      console.error('Failed to load streak:', err);
    }
  }

  // Load verse from API
  async function loadVerse() {
    try {
      const res = await fetch(`/api/verse?workout_type=${workoutType}`);
      const data = await res.json();
      const textEl = document.getElementById('verse-text');
      const refEl = document.getElementById('verse-reference');
      if (textEl && data.text) {
        textEl.textContent = `"${data.text}"`;
      }
      if (refEl && data.reference) {
        refEl.textContent = `‚Äî ${data.reference}`;
      }
    } catch (err) {
      console.error('Failed to load verse:', err);
    }
  }

  // Load challenge
  async function loadChallenge() {
    try {
      const res = await fetch('/api/challenge');
      const data = await res.json();

      const titleEl = document.getElementById('challenge-title');
      const progressEl = document.getElementById('challenge-progress');
      const countEl = document.getElementById('challenge-count');
      const statusEl = document.getElementById('challenge-status');

      if (titleEl) titleEl.textContent = data.title || '-';
      if (countEl) countEl.textContent = `${data.progress || 0}/${data.target || 0}`;

      const percent = data.target > 0 ? Math.min(100, (data.progress / data.target) * 100) : 0;
      if (progressEl) progressEl.style.width = `${percent}%`;

      if (statusEl) {
        if (data.completed) {
          statusEl.textContent = 'Complete!';
          statusEl.className = 'text-xs px-2 py-1 rounded-full bg-green-100 text-green-700';
        } else {
          statusEl.textContent = 'In Progress';
          statusEl.className = 'text-xs px-2 py-1 rounded-full bg-orange-100 text-orange-700';
        }
      }
    } catch (err) {
      console.error('Failed to load challenge:', err);
    }
  }

  // Load all data
  loadStreak();
  loadVerse();
  loadChallenge();
</script>

<style>
  .card {
    @apply bg-white rounded-2xl p-6 shadow-sm;
  }
</style>
